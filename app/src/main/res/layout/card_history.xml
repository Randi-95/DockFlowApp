<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="10dp"
    app:cardElevation="0dp"
    app:cardCornerRadius="20dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:id="@+id/strokeStatus"
                    android:layout_width="4dp"
                    android:layout_height="40dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="50dp"
                    />
                <TextView
                    android:id="@+id/codeBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="#BK-009"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="17dp"
                    android:textColor="@color/light_gray"
                    android:textStyle="bold"
                    android:fontFamily="monospace"
                    />
                <androidx.cardview.widget.CardView
                    android:id="@+id/bgStatus"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="0dp">
                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_marginVertical="4dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="READY TO PICKUP"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:fontFamily="monospace"
                        android:textColor="@color/green"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/tvName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5X MARINE OIL FILTER CAT-300"
                android:textSize="17sp"
                android:textColor="#262626"
                android:fontFamily="sans-serif-medium"/>
            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/history_24dp_100f0f_fill0_wght400_grad0_opsz24"/>
                <TextView
                    android:id="@+id/tvRequestDate"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#474747"
                    android:textSize="12sp"
                    android:text="Requested 2h ago"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/approver"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_gravity="center_vertical"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/person_24dp_100f0f_fill0_wght400_grad0_opsz24"/>
                <TextView
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#474747"
                    android:textSize="12sp"
                    android:text="Approver: Chief engineer"/>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:visibility="gone"
                android:id="@+id/cvReason"
                app:cardBackgroundColor="#FFF5F5"
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                >
                <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvRason"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:textSize="15sp"
                        android:textColor="#FF5C5C"
                        android:text="Reason: jajjajajjajajajajjajajjajaja"/>
                   </LinearLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShowQr"
                android:layout_width="match_parent"
                android:layout_marginTop="14dp"
                android:backgroundTint="@color/blue"
                app:icon="@drawable/qr_code_2_24dp_ffffff_fill0_wght400_grad0_opsz24"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                android:layout_height="wrap_content"
                android:text="Show QR Code"/>
        </LinearLayout>
</androidx.cardview.widget.CardView>