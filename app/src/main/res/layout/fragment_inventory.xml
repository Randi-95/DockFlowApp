<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".inventoryFragment">

    <LinearLayout
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/logo_mentahan"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_marginTop="-4dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="monospace"
                        android:text="MARITIME OPS"
                        android:textStyle="bold"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Inventory"
                        android:textStyle="bold"
                        android:textSize="26sp"
                        />

                </LinearLayout>
            </LinearLayout>

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
                <ImageButton
                    android:id="@+id/btnCart"
                    android:layout_margin="6dp"
                    android:background="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/shopping_cart_24dp_100f0f_fill0_wght400_grad0_opsz24"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxStrokeWidth="0dp"
            app:boxBackgroundColor="#F0F3F8"
            app:hintEnabled="false"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvSearch"
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search spares, tools, or SKU....."
                android:drawableStart="@drawable/search_24dp_434343_fill0_wght400_grad0_opsz24"/>
        </com.google.android.material.textfield.TextInputLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/cFilter"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                app:singleLine="true"
                app:selectionRequired="true"
                app:checkedChip="@id/cAll"
                >
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    app:chipCornerRadius="20dp"
                    android:id="@+id/cAll"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    android:textColor="@color/state_chip_text"
                    app:rippleColor="@null"
                    app:chipStrokeWidth="0dp"
                    android:text="All Items"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/cSparepart"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    android:textColor="@color/state_chip_text"
                    app:rippleColor="@null"
                    app:chipStrokeWidth="0dp"
                    android:text="Sparepart"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/cConsumable"
                    android:textAlignment="center"
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    android:textColor="@color/state_chip_text"
                    app:rippleColor="@null"
                    app:chipStrokeWidth="0dp"
                    android:text="Consumable"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/cSafety"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    android:textColor="@color/state_chip_text"
                    app:rippleColor="@null"
                    app:chipStrokeWidth="0dp"
                    android:text="Safety"/>
                <com.google.android.material.chip.Chip
                    style="@style/Widget.MaterialComponents.Chip.Choice"
                    android:id="@+id/cTools"
                    android:textAlignment="center"
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    app:chipBackgroundColor="@color/state_chip_bg"
                    android:textColor="@color/state_chip_text"
                    app:rippleColor="@null"
                    app:chipStrokeWidth="0dp"
                    android:text="Tools"/>
            </com.google.android.material.chip.ChipGroup>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:text="STOCK AVAILABILITY"
                android:textColor="@color/light_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <androidx.cardview.widget.CardView
                android:layout_gravity="center_vertical"

                app:cardElevation="0dp"
                app:cardCornerRadius="4dp"
                android:backgroundTint="#EEF4FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/blue"
                    android:text="124 ITEMS"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:id="@+id/rvItem"
            />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>